            <div class="content p-3">
                <div class="container-fluid">
                    <div class="container">
                        <form action="/findCat" method="post">
                            <div class="form-group input-group mb-2">
                                <input type="text" class="form-control" name="catName" placeholder="Cat name" aria-label="Recipient's username" aria-describedby="basic-addon2">
                                <button type="submit" class="btn btn-secondary input-group-append">
                                    <i class="fas fa-search mt-1"></i>
                                </button>  
                            </div>
                        </form>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-bordered" name="tableList" id="table_list">
                                <thead>
                                    <th>Name</th>
                                    <th>Origin</th>
                                    <th>Description</th>
                                    <th>Action</th>
                                </thead>
                                <tbody>
                                    <% for(var i = 0; i < catList.length; i++){ %>
                                        <tr>
                                            <td><%= catList[i].name %></td>
                                            <td><%= catList[i].origin %></td>
                                            <td><%= catList[i].description %></td>
                                            <td><button class="btn btn-danger" onclick="location.href='/cat/delete/<%= catList[i].id %>'">Delete</button></td>
                                        </tr>
                                    <% } %>
